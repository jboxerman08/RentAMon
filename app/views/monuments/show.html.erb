<div class="container">
  <h1><%= @monument.name %></h1>
  <% if @monument.user != current_user %>
    <h2><%= "Available" if @monument.availability == true %></h2>
  <% end %>
  <p>Description: <%= @monument.description %></p>

  <div class="photos-container">
    <% @monument.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <div class="monument-info">
    <p>Rent this monument for: $<%= @monument.price %>/day</p>
    <p>Coordinates: lat.<%= @monument.latitude %>, long.<%= @monument.longitude %></p>
  </div>

  <% if @monument.user != current_user %>
    <p><%= link_to 'Book now', new_rental_path(@monument) %></p>
  <% end %>
  <p><%= link_to "Back to Monuments List", monuments_path %></p>

  <div id="map"
    style="width: 100%; height: 600px; border-radius: 8px; box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.2);"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
