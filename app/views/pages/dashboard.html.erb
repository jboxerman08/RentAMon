<!-- http://localhost:3000/dashboard -->
<!-- define username -->
<div class="container">
  <div class="header">
    <h1>Hello <%= current_user.email %> </h1>
      <p>Welcome to your dashboard</p>
  </div>

  <div class="info">
    <div class="message">
      <h2><MESSAGES></MESSAGES></h2>
    </div>

    <div class="d-flex flexor">
      <div class="owner-section">
        <!-- OWNER -->
        <h2>Your monuments:</h2>
        <p>You are currently trusting us with</p>
        <p> <span><%= @my_monuments.count %></span> of your monuments in our catalogue.</p>
        <!-- if user is a owner and a user booked his monument -->
        <!-- if Booking_request.count > 1 requests
          else request-->

        <p> You have have <span><%=pluralize @rental_requests_received.count, "request" %> pending:</span><p>

        <% @rental_requests_received.each do |rental| %>
          <%= rental.name %> for <%= rental.date_of_delivery %> to <%= rental.date_of_return %>
        <% end %>
        <!-- button -->

        <div class="d-flex justify-content-center buttons">
          <!-- got to call the right .status? with those buttons -> should send the appropriate message to the user-->
          <button class="accept-button">accept</button>
          <button class="decline-button">decline</button>
        </div>

      </div>

      <!-- If TRUE send confirmation to the USER that made the RENTAL from the SHOW or is it the User that made the form on CREATE from MONUMENT -->
      <!-- If FALSE send refusal -->


      <!-- RENTER -->
      <div class="renter-section">
        <h2>Your bookings:</h2>
        <!-- CONFIRMATION be like-->
          <% @my_rentals.each do |f| %>
            <% if @my_rentals.count > 1 %>
              Those are the rentals you made a request for:

              <% if f.status? == true %>
                <%= f.current_user.name %> for <%=f.date_of_delivery %> to <%= f.date_of_delivery %> has been confirmed.
                Have fun!

          <!-- REFUSAL be like-->
              <% else %>
                <p><%= f.current_user.name %> for <%=f.date_of_delivery %> to <%= f.date_of_delivery %> has been denied.</p>
                <p> Unfortunately, your booking request could not be confirmed. </p>
                <p> Please try again later or try now for another period of time. </p>
              <% end %>


            <%else%>
              <p>This section is <span>empty</span>.</p>
              <p> Have a look at our catalogue for your next big event.</p>
            <% end %>

          <% end %>

      </div>

    </div>
  </div>
</div>








